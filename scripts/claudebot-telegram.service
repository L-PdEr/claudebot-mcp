[Unit]
Description=ClaudeBot Telegram Bot
After=network.target
Wants=network-online.target

[Service]
Type=simple
User=eliot
Group=eliot
WorkingDirectory=/home/eliot/workspace
EnvironmentFile=/home/eliot/.config/claudebot/env
ExecStart=/home/eliot/bin/claudebot-mcp --telegram
Restart=always
RestartSec=5

# Logging to journal
StandardOutput=journal
StandardError=journal
SyslogIdentifier=claudebot-telegram

[Install]
WantedBy=multi-user.target
